<?php

use function PHPSTORM_META\sql_injection_subst;

include_once("db.php");

class Produto{
    private $id;
    private $nome;
    private $preco;
    private $datacad;

    private $pdo;

    // Getters e Setters
    public function __construct(){
        $this->pdo = getConnection();
    }

    public function getId(){
        return $this->id;
    }

    public function setNome($nome){
        $this->nome = $nome;
    }

    public function getNome(){
        return $this->nome;
    }

    public function setPreco($preco){
        $this->preco = $preco;
    }

    public function getPreco(){
        return $this->preco;
    }

    public function getDataCad(){
        return $this->datacad;
    }

    // Função para adicionar um produto ao banco de dados.
    public function inserir() : bool{
        $sql = "insert into produtos (nome, preco, datacad)
        values (:nome, :preco, default)";

        $cmd = $this->pdo->prepare($sql);
        $cmd->bindValue(":nome", $this->nome);
        $cmd->bindValue(":preco", $this->preco);
        return $cmd->execute();
    }

    // Função para atualizar um produto.
    public function atualizar($id) : bool  {
        $sql = "update produtos set nome = :nome, preco = :nome where id = :id";
         
        $cmd = $this->pdo->prepare($sql);
        $cmd->bindValue(":nome", $this->nome);
        $cmd->bindValue(":preco", $this->preco);
        $cmd->bindValue(":id", $id, PDO::PARAM_INT);
        if($cmd->execute()){
            $this->id = $id;
            return true;
        }
        return false;
    }
}
?>